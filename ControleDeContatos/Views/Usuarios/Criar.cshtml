@using ControleDeContatos.Enum
@model ControleDeContatos.Models.Usuario

@{
    ViewData["Title"] = "Criar";
}

<div class="text-center">

    <h1 class="display-4">Cadastrar usúario</h1>

</div>
<div class="mb-3">
    <form asp-action="Criar">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" placeholder="Digite o nome:" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="control-label">E-mail</label>
            <input asp-for="Email" class="form-control" placeholder="Digite E-mail" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Login" class="control-label"></label>
            <input asp-for="Login" class="form-control" placeholder="Digite Login" />
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Perfil" class="control-label"></label>
            <select asp-for="Perfil" class="form-control">
                <option value="0">Selecione</option>
                <option value="@PerfilEnum.Administrador">Administrado</option>
                <option value="@PerfilEnum.Padrao">Padrão</option>
            </select>
            <span asp-validation-for="Perfil" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Senha" class="control-label"></label>
            <input asp-for="Senha" type="password" class="form-control" placeholder="Digite a senha:" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
       
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary btn-outline-dark">Adicionar</button>
            <a class="btn btn-secondary btn-outline-dark" asp-action="Index" asp-controller="Usuarios" role="button">Voltar</a>
        </div>
    </form>
</div>
