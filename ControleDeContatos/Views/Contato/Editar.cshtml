@model Contato
@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">

    <h1 class="display-4">Editar contato</h1>

</div>
<form asp-controller="Contato" asp-action="Alterar">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do contato">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail do contato">
          @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="mb-3">
        <label asp-for="Celular" class="form-label">Celular</label>
        <input type="number" asp-for="Celular" class="form-control" placeholder="Digite o celular do contato">
         @Html.ValidationMessageFor(x => x.Celular)
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary btn-outline-dark">Alterar</button>
        <a class="btn btn-secondary btn-outline-dark" asp-action="Index" asp-controller="Contato" role="button">Voltar</a>
    </div>
</form>